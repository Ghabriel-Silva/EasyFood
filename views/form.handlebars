<main>
    <div class="container  mt-3">
        <form action="/cadastrar" method="POST" enctype="multipart/form-data"
            class="max-width-custom   bg-light  p-3 rounded-2 ">
            <div class="mb-3">
                <label for="produto" class="form-label">Produto</label>
                <input type="text" class="form-control" id="produto" aria-describedby="emailHelp" name="produto">
            </div>
            <div class="mb-3">
                <label for="preco" class="form-label">Valor</label>
                <input type="number" class="form-control" id="preco" name="valor">
            </div>
            <div class="mb-3">
                <input class="form-control" type="file" name="imagem">
            </div>
            <button type="submity" class="btn btn-primary ">Adcionar</button>
        </form>
    </div>
    <div class="container pt-5" >
        <div class="d-flex flex-wrap justify-content-center align-items-center  gap-3"  >
                {{#each produtos}}
                    <div class="card" style="width: 18rem;">
                    <img src="/imagem/{{imagem}}" class="card-img-top" alt="blus verde">
                    <div class="card-body">
                        <h5 class="card-title">{{nome}}</h5>
                        <p class="card-text"> {{valor}} R$</p>
                        <a href="/editar/{{codigo}}/{{imagem}}" class="btn btn-warning">Editar</a>
                        <a href="/remover/{{codigo}}/{{imagem}}" class="btn btn-danger">Remover</a>
                    </div>
                </div>
                {{/each}}
        </div>
    </div>
</main>