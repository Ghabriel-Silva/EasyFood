<main>
    <div class="container mt-4">
        <div class="bg-white border rounded-3 shadow-sm p-4" style="max-width: 900px; margin: auto;">

            <h4 class="mb-4 text-dark fw-semibold border-bottom pb-2">
                <i class="bi bi-box-seam me-2"></i>Cadastrar Produto
            </h4>

            {{#if success_msg}}
            <div id="flash-msg" class="alert alert-success">{{success_msg}}</div>
            {{/if}}

            {{#if error_msg}}
            <div id="flash-msg" class="alert alert-danger">{{error_msg}}</div>
            {{/if}}

            <form action="/cadastrar" method="POST" enctype="multipart/form-data">

                <!-- Nome do produto -->
                <div class="mb-3">
                    <label for="produto" class="form-label">
                        <i class="bi bi-tag-fill me-1"></i>Nome do Produto
                    </label>
                    <input type="text" class="form-control" id="produto" name="produto" >
                </div>

                <!-- Valor -->
                <div class="mb-3">
                    <label for="preco" class="form-label">
                        <i class="bi bi-currency-dollar me-1"></i>Valor (R$)
                    </label>
                    <input type="number" step="0.01" class="form-control" id="preco" name="valor" >
                </div>

                <!-- Quantidade -->
                <div class="mb-3">
                    <label for="quantidade" class="form-label">
                        <i class="bi bi-stack me-1"></i>Quantidade
                    </label>
                    <input type="number" step="0.01" class="form-control" id="quantidade" name="quantidade" >
                </div>

                <!-- Unidade -->
                <div class="mb-3">
                    <label for="unidade" class="form-label">
                        <i class="bi bi-rulers me-1"></i>Unidade de Medida
                    </label>
                    <select class="form-select" id="unidade" name="unidade" >
                        <option value="" selected disabled>Selecione a unidade</option>
                        <option value="kg">Kilo</option>
                        <option value="g">Gramas</option>
                        <option value="un">Unidade</option>
                        <option value="n">Nenhuma</option>
                    </select>
                </div>

                <!-- Imagem -->
                <div class="mb-4">
                    <label class="form-label">
                        <i class="bi bi-image me-1"></i>Imagem do Produto
                    </label>
                    <input class="form-control" type="file" name="imagem" accept="image/*">
                </div>

                <!-- BotÃ£o -->
                <button type="submit" class="btn btn-success w-100 fw-semibold">
                    <i class="bi bi-plus-circle me-1"></i>Adicionar Produto
                </button>
            </form>
        </div>
    </div>
</main>