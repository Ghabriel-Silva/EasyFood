<main>
    <div class="container  mt-3 ">
        <form action="/cadastrar" method="POST" enctype="multipart/form-data"
            class="max-width-custom  bg-light  p-3 rounded-2 ">


            {{#if success_msg}}
            <div id="flash-msg" class="alert alert-success">{{success_msg}}</div>
            {{/if}}

            {{#if error_msg}}
            <div id="flash-msg" class="alert alert-danger">{{error_msg}}</div>
            {{/if}}


            <div class="mb-3">
                <label for="produto" class="form-label">Produto</label>
                <input type="text" class="form-control" id="produto" aria-describedby="emailHelp" name="produto">
            </div>
            <div class="mb-3">
                <label for="preco" class="form-label">Valor</label>
                <input type="number" step="0.01" class="form-control" id="preco" name="valor">
            </div>
            <div class="mb-3">
                <label for="quantidade" class="form-label">Quantidade</label>
                <input type="number" step="0.01" class="form-control" id="quantidade" name="quantidade">
            </div>
            <div class="mb-3">
                <select class="form-select" aria-label="Default select example" name="unidade">
                    <option selected>Selecione a unidade</option>
                    <option value="kg">Kilo</option>
                    <option value="g">Gramas</option>
                    <option value="un">Unidade</option>
                    <option value="n">Nenhuma</option>
                </select>
            </div>
            <div class="mb-3">
                <input class="form-control" type="file" name="imagem">
            </div>
            <button type="submity" class="btn btn-primary ">Adcionar</button>
        </form>
    </div>

    </div>
</main>