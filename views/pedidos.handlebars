<main>
    <div class="container mt-4">
        {{#if pedidos.length}}
        <div class="d-flex flex-column gap-3">
            {{#each pedidos}}
            <div class="border rounded p-3 bg-light shadow-sm">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <div>
                        <h5 class="text-dark fw-bold mb-1">Cliente: {{cliente}}</h5>
                        <p class="mb-1"><strong>Endere√ßo:</strong> {{endereco}}</p>
                        <p class="mb-1"><strong>Itens:</strong> {{produtos}}</p>
                        <p class="mb-1"><strong>Valor Total:</strong> R$ {{valor_total}}</p>
                        <p class="mb-1"><strong>Pagamento:</strong> {{forma_pagamento}} | Pago: {{pago}}</p>
                        {{#if observacao}}
                        <p class="mb-0"><strong>Obs.:</strong> {{observacao}}</p>
                        {{/if}}
                    </div>

                    <div class="d-flex flex-column gap-2">
                        <form action="/pedido/concluir/{{id}}" method="POST">
                            <button class="btn btn-success btn-sm" type="submit">‚úî Concluir</button>
                        </form>
                        <a href="/pedido/editar/{{id}}" class="btn btn-warning btn-sm">‚úèÔ∏è Editar</a>
                        <form action="/pedido/deletar/{{id}}" method="POST">
                            <button class="btn btn-danger btn-sm" type="submit">üóë Excluir</button>
                        </form>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{else}}
        <div class="alert alert-info text-center">
            Nenhum pedido recebido ainda.
        </div>
        {{/if}}

    </div>
</main>